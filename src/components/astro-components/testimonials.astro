---
import SectionTitle from "./section-title.astro";
import { testimonials } from "../../js/data";
---

<div
  class="w-full md:w-5/6 mx-auto flex flex-col justify-center items-center py-10 mb-6"
>
  <SectionTitle title="Testimonials" />
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 w-11/12 md:w-full my-6">
    {
      testimonials.map((testimonial, index) => (
        <>
          <div
            class={`flex flex-col justify-center items-center px-10 py-4 mt-6 md:mt-0 rounded-2xl shadow-lg w-11/12 mx-auto h-96 ${index % 2 === 0 ? "bg-white" : "bg-black"}`}
          >
            <img src={testimonial.image} alt="profile image" class="mb-6" />
            <p
              class={`}paragraph-p2-regular  text-center mb-6 ${index % 2 === 0 ? "text-primary-neutral" : "text-white"}`}
            >
              {testimonial.content}
            </p>
            <div
              class={`h-0.5  w-1/3 mb-6 ${index % 2 === 0 ? "bg-black" : "bg-white"}`}
            />
            <h5
              class={`heading-h5-semibold mb-6 ${index % 2 === 0 ? "text-primary-neutral" : "text-white"}`}
            >
              {testimonial.name}
            </h5>
            <h6
              class={`heading-h6-semibold  ${index % 2 === 0 ? "text-zinc-500" : "text-white"}`}
            >
              {testimonial.job}
            </h6>
          </div>
        </>
      ))
    }
  </div>
</div>
