---
import Btn from "../react-components/btn.tsx";
---

<nav class="w-full z-20">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="#" class="flex items-center">
      <img src="/assets/logo.png" class="h-8" alt="Logo" />
      <span class="heading-h5-bold">Personal</span>
    </a>
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <Btn title="Resume" icon={true} client:load />
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="inline-flex items-center p-2 w-10 h-10 justify-center rounded-lg md:hidden hover:bg-gray-100"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1"
      id="navbar-sticky"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-4 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0"
      >
        <li>
          <a
            href="#"
            class="heading-h5-semibold block py-2 px-3 hover:bg-gray-100 md:hover:text-zinc-500 md:hover:bg-transparent md:p-0"
            aria-current="page">About Me</a
          >
        </li>
        <li>
          <a
            href="#"
            class="heading-h5-semibold block py-2 px-3 hover:bg-gray-100 md:hover:text-zinc-500 md:hover:bg-transparent md:p-0"
            >Skills</a
          >
        </li>
        <li>
          <a
            href="#"
            class="heading-h5-semibold block py-2 px-3 md:hover:text-zinc-500 hover:bg-gray-100 md:hover:bg-transparent md:p-0"
            >Projects</a
          >
        </li>
        <li>
          <a
            href="#"
            class="heading-h5-semibold block py-2 px-3 md:hover:text-zinc-500 hover:bg-gray-100 md:hover:bg-transparent md:p-0"
            >Contact Me</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
