---
import SectionTitle from "./section-title.astro";
import { experiences } from "../../js/data";
---

<div
  class="flex flex-col justify-between items-center bg-black w-full py-5 md:py-10"
>
  <SectionTitle title="Experience" color="white" />
  <div
    class="flex flex-col justify-center items-center w-5/6 mx-auto mt-5 md:mt-10"
  >
    {
      experiences.map((experience, index) => (
        <div
          class={`w-full mb-10 py-8 px-6 border-2 rounded-lg md:h-48 ${index % 2 !== 0 ? "bg-zinc-800 border-zinc-800" : "bg-black border-zinc-500"}`}
        >
          <div class="flex flex-col md:flex-row justify-between md:items-center mb-7">
            <div class="flex items-center">
              <img src={experience.icon} alt="icon" />
              <h4 class="heading-h4-semibold text-white ml-5">
                {experience.title}
              </h4>
            </div>
            <h6 class="heading-h6-semibold text-zinc-300 mt-6 md:mt-0">
              {experience.date}
            </h6>
          </div>
          <p class="paragraph-p2-regular text-zinc-300 w-full md:w-11/12">
            {experience.description}
          </p>
        </div>
      ))
    }
  </div>
</div>
